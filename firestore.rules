rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Configuration document - readable by all, writable only by authenticated users
    match /config/chat_config {
      allow read, write: if request.auth != null;
    }
    
    // Private messages - anyone can read/write (for demo purposes)
    // In production, you might want to add more security
    match /private_messages/{document} {
      allow read, write: if request.auth != null;
    }
  }
}